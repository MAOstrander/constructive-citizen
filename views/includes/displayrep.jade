section#federal
  .row
    .fed-col.col-sm-4
      h1 Federal Level Representatives
      p.larger 100
      p.large US Senators
      p.larger 435
      p.large House of Representatives
      p.larger 535
      p.large Members of Congress
    .col-sm-8
      h2 Your Senators
      .row
        #senator1.col-sm-6
          img(src="#{personsReps.senator1.photo}")
          h3 United States Senator
          h4 #{personsReps.senator1.name}
          if personsReps.senator1.website != "Not Found"
            p Website: <a href="#{personsReps.senator1.website}">#{personsReps.senator1.name}</a>
          if personsReps.senator1.email != "Not Found"
            p Email: #{personsReps.senator1.email}

        #senator2.col-sm-6
          img(src="#{personsReps.senator2.photo}")
          h3 United States Senator
          h4 #{personsReps.senator2.name}
          if personsReps.senator2.website != "Not Found"
            p Website: <a href="#{personsReps.senator2.website}">#{personsReps.senator2.name}</a>
          if personsReps.senator2.email != "Not Found"
            p Email: #{personsReps.senator2.email}
      .row
        .col-sm-12
          h2 You are represented in Congressional District #{personsReps.congressDistrict}
      .row
        #congressman.col-sm-4.col-sm-offset-2
          img(src="#{personsReps.congressMember.photo}")
        .col-sm-4
          h3 United States Congress Member
          h4 #{personsReps.congressMember.name}
          if personsReps.congressMember.website != "Not Found"
            p Website: <a href="#{personsReps.congressMember.website}">#{personsReps.congressMember.name}</a>
          if personsReps.congressMember.email != "Not Found"
            p Email: #{personsReps.congressMember.email}

